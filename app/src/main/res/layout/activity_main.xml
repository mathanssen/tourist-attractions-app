<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/colorMain"
    android:orientation="vertical">

    <!-- Logo -->
    <ImageView
        android:id="@+id/image_logo"
        android:layout_width="180dp"
        android:layout_height="230dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:src="@drawable/logo"
        android:padding="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TOURIST ATTRACTION APP"
        android:layout_gravity="center"
        android:textSize="22dp"
        android:fontFamily="sans-serif-smallcaps"
        android:shadowColor="#ff8787"
        android:shadowRadius="2"
        android:shadowDx="1"
        android:shadowDy="1"
        />

    <!-- Login -->
    <EditText
        android:id="@+id/text_login_username"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:drawableLeft="@drawable/ic_user"
        android:background="#11000000"
        android:layout_marginTop="50dp"
        android:padding="12dp"
        android:focusable="true"
        android:hint="Username"
        android:inputType="textPersonName"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/text_login_password"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#11000000"
        android:layout_marginTop="15dp"
        android:padding="12dp"
        android:drawableLeft="@drawable/ic_password"
        android:hint="Password"
        android:focusable="true"
        android:inputType="textPassword"
        android:textSize="25dp"/>

    <CheckBox
        android:id="@+id/checkbox_remember_me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remember me"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="70dp"
        android:textSize="22dp"
        android:textColor="#696969"
        android:buttonTint="#696969"
        />

    <Button
        android:id="@+id/button_login"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:theme="@style/RedButton"
        android:layout_gravity="center"
        android:text="Login"
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        android:onClick="loginPressed"/>

    <Button
        android:id="@+id/button_go_register"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:theme="@style/WhiteButton"
        android:layout_gravity="center"
        android:text="Register"
        android:textSize="20dp"
        android:onClick="firstRegisterPressed"/>

</LinearLayout>